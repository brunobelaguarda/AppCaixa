<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.appcaixa">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCaixa"
        tools:targetApi="31">
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.Splash"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FormExtrato.formExtrato"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FormSaque.formSaque"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FormDeposito.formDeposito"
            android:exported="false"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FormTelaPrincipal.TelaPrincipal"
            android:exported="true"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>