<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FormSaque.formSaque"
    android:background="@color/blue_light">

    <EditText
        android:id="@+id/txt_cpf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="CPF"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        android:inputType="number"
        android:maxLength="11" />
    <EditText
        android:id="@+id/txt_valor_sacar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:hint="0.00"
        android:textColorHint="@color/black"
        android:textSize="24sp"
        android:inputType="number"
        android:maxLength="11" />
    <Button
        android:id="@+id/bt_sacar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sacar"
        android:padding="15dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:backgroundTint="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="50sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/cedula100reais"/>
        <TextView
            android:id="@+id/txt_qtd_100"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/cedula50reais"/>
        <TextView
            android:id="@+id/txt_qtd_50"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textAlignment="center" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/cedula20reais"/>
        <TextView
            android:id="@+id/txt_qtd_20"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/cedula10reais"/>
        <TextView
            android:id="@+id/txt_qtd_10"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/cedula5reais"/>
        <TextView
            android:id="@+id/txt_qtd_5"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="30sp"
            android:textAlignment="center"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/cedula2reais"/>
        <TextView
            android:id="@+id/txt_qtd_2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:textAlignment="center" />

    </LinearLayout>



</LinearLayout>
